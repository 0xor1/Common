<div class="root">
    <RadzenLayout class="rz-shadow-3">
        <RadzenHeader>
            <div class="d-flex align-items-center">
                <RadzenSidebarToggle Click="@(() => LeftExpanded = !LeftExpanded)" />
            </div>
        </RadzenHeader>
        <RadzenSidebar @bind-Expanded="@LeftExpanded">
            <RadzenPanelMenu>
                <RadzenPanelMenuItem Text="Home" Icon="home" Path="/"/>
                <RadzenPanelMenuItem Text="Counter" Icon="account_box" Path="/counter"/>
            </RadzenPanelMenu>
        </RadzenSidebar>
        <RadzenBody>
            @Body
        </RadzenBody>
        <RadzenNotification/>
    </RadzenLayout>
</div>

@inherits LayoutComponentBase
@code{

    private bool LeftExpanded = false;

}