<div>
    @foreach (var t in _toasts)
    {
        <p>@t.Message</p>
    }
</div>

@using Dnsk.Client.Lib
@inject IToasterService _ts;
@implements IToaster;

@code {
    
    private readonly List<Toast> _toasts = new ();
    
    protected override void OnInitialized()
    {
        _ts.Init(this);
        base.OnInitialized();
    }

    public async Task Show(Toast t)
    {
        _toasts.Add(t);
        StateHasChanged();
        await Task.Delay(5000);
        _toasts.Remove(t);
        StateHasChanged();
    }

}
